<h1><%= @show.title %></h1>
<%= link_to "Edit", edit_show_path %><br>
<%= image_tag(@show.image_url) %>
<h3>Air Date: </h3> <%= @show.first_air_date %>
<h3>Genre: </h3> <%= @show.genre %>
<h3>Network: </h3> <%= @show.network %>
<h3>Plot:</h3>
<p>
  <%= @show.plot %>
</p>
<h3>Actors:</h3>
<ol>
  <% @show.actors.each do |actor| %>
    <li><%= link_to actor.name, actor_path(actor) %></li>
  <% end %>
</ol>
